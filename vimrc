let mapleader='\<Space>'

set shell=/bin/bash\ -i

set number

set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4

set autoindent

set backspace=indent,eol,start

set showmatch

set wildmode=longest:list,full
set wildmenu

set ignorecase
set smartcase

set hlsearch
set incsearch

set list listchars=tab:>·,trail:·,nbsp:·

set splitright
set splitbelow

set cursorline

nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
